<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_personal_note" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.personal.note</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="before">
                <div class="oe_button_box" name="button_box">
                    <button type="action"
                            name="%(action_personal_notes_by_partner)d"
                            class="oe_stat_button"
                            icon="fa-sticky-note">
                        <field name="note_count" widget="statinfo" string="Notas"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_personal_notes_by_partner" model="ir.actions.act_window">
        <field name="name">Notas del Contacto</field>
        <field name="res_model">personal.note</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('partner_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>
</odoo>
